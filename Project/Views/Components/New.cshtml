@model Project.Models.Component
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Component</h2>

@using (Html.BeginForm("Create", "Components"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.PartId)
        @Html.TextBoxFor(m => m.PartId, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Qty)
        @Html.TextBoxFor(m => m.Qty, new { @class = "form-control" , @type = "number" })
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}