@model IEnumerable<Project.Models.Component>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Items in Stocks</h2>


<p>

    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>



<table class="table" id="components">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PartId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Qty)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PartId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qty)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @style = "display:none" })
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @style = "display:none" })
            </td>
        </tr>
    }

</table>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#components").DataTable({
                ajax: {
                    url: "/api/components",
                    dataSrc:""
                },
                columns: [
                    {
                        data:"partId"
                    },
                    {
                        data:"name"
                    },
                    {
                        data:"qty"
                    }
                ]
            });

        });
    </script>
}